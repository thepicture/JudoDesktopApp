<Window x:Class="JudoDesktopApp.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JudoDesktopApp"
        xmlns:viewmodels="clr-namespace:JudoDesktopApp.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:NavigationViewModel}"
        mc:Ignorable="d"
        Title="{Binding ViewModel.Title}"
        Height="450"
        Width="800"
        MinHeight="450"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewmodels:NavigationViewModel>
            <viewmodels:NavigationViewModel.ViewModel>
                <viewmodels:LoginViewModel Title="Окно входа"/>
            </viewmodels:NavigationViewModel.ViewModel>
        </viewmodels:NavigationViewModel>
    </Window.DataContext>
    <Grid>
        <Frame Content="{Binding ViewModel}" />
    </Grid>
</Window>
